<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuessingSongs.Views.AboutPage"
             xmlns:vm="clr-namespace:GuessingSongs.ViewModels"
             >
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#4437a1</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            
        </Grid.RowDefinitions>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
           
        </StackLayout>
        <ScrollView Grid.Row="0">
            <StackLayout Orientation="Vertical">
                <Image Source="on.png"></Image>
                <Image Source="cat.png"></Image>

 
            </StackLayout>
        
        </ScrollView>

        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical">


                <Button BackgroundColor="#4437a1" Text="Choose a category" Clicked="Button_Clicked"></Button>


            </StackLayout>

        </ScrollView>






    </Grid>




</ContentPage>
